{
  "name": "@desselbane/vitest-helpers",
  "version": "1.0.5",
  "type": "module",
  "description": "Utilities to write better unit tests",
  "scripts": {
    "dev": "tsdown --watch --no-clean",
    "build": "tsdown",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DesselBane/mono",
    "directory": "packages/vitest-helpers"
  },
  "exports": {
    "./node/child_process": "./dist/node/child_process.js",
    "./node/fs": "./dist/node/fs.js",
    "./package.json": "./package.json",
    ".": "./dist/main.js"
  },
  "files": [
    "dist/**",
    "package.json",
    "CHANGELOG.md"
  ],
  "volta": {
    "extends": "../../package.json"
  },
  "lint-staged": {
    "*": "eslint --fix --max-warnings 0"
  },
  "peerDependencies": {
    "vitest": "^3.2.0 || ^4.0.0"
  },
  "devDependencies": {
    "@desselbane/configs": "workspace:*",
    "@types/node": "24.10.1",
    "tsdown": "0.16.6",
    "type-fest": "5.2.0",
    "typescript": "5.9.3",
    "unplugin-unused": "0.5.6",
    "vitest": "4.0.13"
  }
}
