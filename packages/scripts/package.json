{
  "name": "@repo/scripts",
  "version": "0.2.5",
  "type": "module",
  "private": true,
  "description": "Scripts which are used throughout the mono repo.",
  "scripts": {
    "test": "vitest run",
    "test:dev": "vitest",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --build",
    "reformat-changelogs": "node src/reformat-changelogs-cli.ts",
    "renovate-add-changeset": "node src/renovate-add-changeset.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DesselBane/mono",
    "directory": "packages/scripts"
  },
  "volta": {
    "extends": "../../package.json"
  },
  "lint-staged": {
    "*": "eslint --fix --max-warnings 0"
  },
  "devDependencies": {
    "@desselbane/configs": "workspace:*",
    "@desselbane/vitest-helpers": "workspace:*",
    "@types/node": "24.10.8",
    "@vitest/coverage-v8": "4.0.17",
    "simple-git": "3.30.0",
    "type-fest": "5.4.1",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  }
}
